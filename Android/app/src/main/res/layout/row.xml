<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="363dp"
    android:layout_height="162dp"
    android:background="@drawable/layout_bg2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clickResponderID"
        android:layout_width="363dp"
        android:layout_height="145dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/layout_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pictureID"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/sexPictureID"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/sexID"
            android:layout_width="113dp"
            android:layout_height="27dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:hint="性別"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/pictureID"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bacterinID"
            android:layout_width="87dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="11dp"
            android:hint="已打疫苗"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/sterilizationID"
            android:layout_width="79dp"
            android:layout_height="27dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="23dp"
            android:hint="已結紮"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/pictureID"
            app:layout_constraintTop_toBottomOf="@+id/areaID" />

        <TextView
            android:id="@+id/areaID"
            android:layout_width="113dp"
            android:layout_height="27dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="21dp"
            android:hint="所在地：台北市"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/pictureID"
            app:layout_constraintTop_toBottomOf="@+id/sexID" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>